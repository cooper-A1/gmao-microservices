# .env - Variables d'environnement pour Docker Compose

# JWT Secret (IMPORTANT: à changer en production)
JWT_SECRET=super-secret-change-me-in-prod

# Environnement
ENVIRONMENT=development

# --- Bases de données ---
# PostgreSQL (Machines)
POSTGRES_DB=machines_db
POSTGRES_USER=gmao_user
POSTGRES_PASSWORD=gmao_password

# MySQL (Techniciens)
MYSQL_DATABASE=techniciens_db
MYSQL_USER=gmao_user
MYSQL_PASSWORD=gmao_password
MYSQL_ROOT_PASSWORD=root_password

# MongoDB (Interventions)
MONGO_INITDB_ROOT_USERNAME=gmao_admin
MONGO_INITDB_ROOT_PASSWORD=gmao_password
MONGO_DB=interventions_db

# Redis (Stock)
REDIS_PASSWORD=gmao_password

# --- Ports ---
API_GATEWAY_PORT=80
MACHINES_PORT=8001
INTERVENTIONS_PORT=8002
TECHNICIENS_PORT=8003
STOCK_PORT=8004
PREDICTION_PORT=8005
PORTAINER_PORT=9000
